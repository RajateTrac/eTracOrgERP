<div class="content-body">
    <div class="container-fluid" style="margin-top:-46px;">
        <!-- row -->
        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <div class="card aos-init aos-animate" data-aos="fade-up">
                    <div class="card-header">
                        <h4 class="card-title">On-Boarding/Personal Information</h4>
                    </div>
                    <div class="card-body">
                        <div id="page" class="animsition equal" style="z-index:0">
                            <!--/ End Navbar -->
                            <div id="page-2">
                                <section id="form_tab_sec" class="section tab_sec">
                                    <div class="container" style="margin-top: -100px;">
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(false)
                                        @using (Html.BeginForm(new { @id = "msform" }))
                                        {
                                            <div class="tab_pannel_sec panel-default">
                                                <div class="tab_con">
                                                    <ul class="nav nav-tabs" id="myTab">
                                                        <li class="nav-item active">
                                                            <a data-toggle="tab" href="#personal_detail" class="nav-link active"><span class="step_count">1</span><span class="class_name">Personal Detail</span></a>
                                                        </li>
                                                        <li class="nav-item"><a data-toggle="tab" href="#acadmic_detail" class="nav-link"><span class="step_count">2</span><span class="class_name">Academic Detail</span></a></li>
                                                        <li class="nav-item"><a data-toggle="tab" href="#employment_history" class="nav-link"><span class="step_count">3</span><span class="class_name">Employee History</span></a></li>
                                                        @*<li class="nav-item"><a data-toggle="tab" href="#shedule_avalibility" class="nav-link"><span class="step_count">4</span><span class="class_name">Schedule Avalibility</span></a></li>*@
                                                    </ul>
                                                    @Html.HiddenFor(x => x.ApplicantId)

                                                    <div class="tab-content">
                                                        <div id="personal_detail" class="tab-pane fade show active">
                                                            <div>
                                                                <fieldset id="personaldetails">
                                                                    @{ViewBag.myModelprefixName = "ApplicantPersonalInfo."; ViewBag.ActionSection = "personaldetails";}
                                                                    <div>
                                                                        @Html.Partial("~/Views/Guest/PartialView/_ApplicantPersonalInfo.cshtml")
                                                                    </div>
                                                                </fieldset>
                                                                <fieldset id="addressdetails">
                                                                    @{ViewBag.myModelprefixName = "ApplicantAddress."; ViewBag.ActionSection = "addressdetails";}
                                                                    <div>
                                                                        @Html.Partial("~/Views/Guest/PartialView/_ApplicantAddress.cshtml")
                                                                    </div>
                                                                </fieldset>
                                                                <div class="main_row">
                                                                    <fieldset id="contactdetails">
                                                                        @{ViewBag.myModelprefixName = "ApplicantContactInfo."; ViewBag.ActionSection = "contactdetails";}
                                                                        <div>
                                                                            @Html.Partial("~/Views/Guest/PartialView/_ApplicantContactInfo.cshtml")
                                                                        </div>
                                                                    </fieldset>
                                                                </div>
                                                                <div class="btn_row">
                                                                    <div class="row">
                                                                        <div class="colmn col-md-12 d-flex space-between">
                                                                            <button class="btn" style="visibility: hidden;border-radius: 100px;width: 150px;height: 35px;font-size: 11px; background-image: linear-gradient(to left, #3cffdb, #425fe0);" type="button" >Previous</button>
                                                                            <button class="btn" onclick="AcademicDetails()" type="button"  style="border-radius: 100px; width: 150px;height: 35px;font-size: 11px;background-image: linear-gradient(to left, #3cffdb, #425fe0);">Next</button>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <script>
                                                                    function AcademicDetails() {
                                                                        $('#myTab a[href="#acadmic_detail"]').tab('show');
                                                                        $('#myTab li').removeClass('active');
                                                                        $('#myTab a[href="#acadmic_detail"]').parent().addClass('active');

                                                                    }
                                                                </script>
                                                            </div>

                                                        </div>
                                                        <div id="acadmic_detail" class="tab-pane fade">
                                                            <fieldset id="academicdetails">
                                                                @{ViewBag.myModelprefixName = "AplicantAcadmicDetails."; ViewBag.ActionSection = "academicdetails";}
                                                                <div>
                                                                    @Html.Partial("~/Views/Guest/PartialView/_AcademicDetailsApplicant.cshtml")
                                                                </div>
                                                            </fieldset>
                                                        </div>
                                                        <div id="employment_history" class="tab-pane fade">
                                                            <fieldset id="employeehistory">
                                                                @{ViewBag.myModelprefixName = "ApplicantBackgroundHistory."; ViewBag.ActionSection = "employeehistory";}
                                                                <div>
                                                                    @Html.Partial("~/Views/Guest/PartialView/_EmploymentHistory.cshtml")
                                                                </div>
                                                            </fieldset>
                                                            <fieldset id="positionheld">
                                                                @{ViewBag.myModelprefixName = "ApplicantBackgroundHistory.ApplicantPositionTitle"; ViewBag.ActionSection = "positionheld";}
                                                                <div>
                                                                    @Html.Partial("~/Views/Guest/PartialView/_ApplicantPositionTitle.cshtml")
                                                                </div>
                                                            </fieldset>
                                                        <center>
                                                            <span @*type="submit"*@ id="SaveApplicantInfo" class="form-control btn btn-info "  style="border-radius: 100px; width: 150px;height: 35px;font-size: 11px;background-image: linear-gradient(to left, #3cffdb, #425fe0);">
                                                                Submit
                                                            </span>
                                                        </center>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <!--/ .container -->
