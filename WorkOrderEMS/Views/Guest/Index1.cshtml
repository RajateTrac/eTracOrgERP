<script>
    function EnableEdit(elm) {
        var inputs = $('.basic-form :input');
        if (elm.checked) {
            inputs.each(function (i, elm) {
                $(elm).removeAttr('disabled');
            })
            $("#hdnIsEditEnable").val(true);
        }
        else {
            inputs.each(function (i, elm) {
                $(elm).attr('disabled', true);
            })
            $("#hdnIsEditEnable").val(false);
        }
    }
</script>
