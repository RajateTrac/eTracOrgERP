@model WorkOrderEMS.Models.CommonApplicantModel

@{
    Layout = null;
}
    <div class="main_row">
        <div class="row">
            <div class="colmn col-md-4">
                <div class="form-group">
                    <select type="text" class="form-control">
                        <option>Mr</option>
                        <option>Ms</option>
                        <option>Mrs</option>
                    </select>
                </div>
            </div>
            <div class="colmn col-md-8 d-flex align-item-center">
                <div class="form-group">
                    <label class="form-label">Please Provide an address for last three years of your residency.</label>
                </div>
            </div>
        </div>
        @for (var i = 0; i < Model.ApplicantPersonalInfo.Count(); i++)
        {
            <div class="row">
                <div class="colmn col-md-4">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].API_FirstName, new { @class = "form-control",@placeholder="First Name" })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].API_FirstName)
                    </div>
                </div>
                <div class="colmn col-md-4">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].API_MiddleName, new { @class = "form-control",@placeholder="Middle Name"  })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].API_MiddleName)
                    </div>
                </div>
                <div class="colmn col-md-4">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].API_LastName, new { @class = "form-control",@placeholder="Last Name"  })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].API_LastName)

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].API_SSN, new { @class = "form-control",@placeholder="SSN"  })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].API_SSN)
                    </div>
                </div>
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].API_DLNumber, new { @class = "form-control",@placeholder="DL Number"  })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].API_DLNumber)

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].API_Resume, new { @class = "form-control", @placeholder = "Resume" })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].API_Resume)
                    </div>
                </div>
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].API_DesireSalaryWages, new { @class = "form-control", @placeholder = "Desired Salary" })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].API_DesireSalaryWages)
                    </div>
                </div>
            </div>
        }
    </div>