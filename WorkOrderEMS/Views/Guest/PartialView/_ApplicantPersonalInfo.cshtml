@model WorkOrderEMS.Models.CommonApplicantModel

@{
    Layout = null;
}
    <div class="main_row">
        <div class="row">
            <div class="colmn col-md-4">
                <div class="form-group">
                    <select type="text" class="form-control">
                        <option>Mr</option>
                        <option>Ms</option>
                        <option>Mrs</option>
                    </select>
                </div>
            </div>
            <div class="colmn col-md-8 d-flex align-item-center">
                <div class="form-group">
                    <label class="form-label">Please Provide an address for last three years of your residency.</label>
                </div>
            </div>
        </div>
        @for (var i = 0; i < Model.ApplicantPersonalInfo.Count(); i++)
        {
            <div class="row">
                <div class="colmn col-md-4">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].FirstName, new { @class = "form-control",@placeholder="First Name" })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].FirstName)
                    </div>
                </div>
                <div class="colmn col-md-4">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].MiddleName, new { @class = "form-control",@placeholder="Middle Name"  })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].MiddleName)
                    </div>
                </div>
                <div class="colmn col-md-4">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].LastName, new { @class = "form-control",@placeholder="Last Name"  })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].LastName)

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].SSN, new { @class = "form-control",@placeholder="SSN"  })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].SSN)
                    </div>
                </div>
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].DL_Number, new { @class = "form-control",@placeholder="DL Number"  })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].DL_Number)

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].Resume, new { @class = "form-control", @placeholder = "Resume" })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].Resume)
                    </div>
                </div>
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ApplicantPersonalInfo[i].DesireSalary, new { @class = "form-control", @placeholder = "Desired Salary" })
                        @Html.ValidationMessageFor(x => x.ApplicantPersonalInfo[i].DesireSalary)
                    </div>
                </div>
            </div>
        }
    </div>