                    <div class="form-group">
                        @Html.TextBoxFor(x => item.API_SSN, new { @class = "form-control", @placeholder = "SSN" })
                        @Html.ValidationMessageFor(x => item.API_SSN)
                    </div>
                </div>
                <div class="colmn col-md-6">
                    <div class="form-group">
