                    <label class="AP-marginL">Desired Salary:</label>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(x => item.API_Resume, new { @class = "form-control", @placeholder = "Resume" })
