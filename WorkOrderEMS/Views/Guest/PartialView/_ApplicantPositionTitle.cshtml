@model WorkOrderEMS.Models.CommonApplicantModel

@{
    Layout = null;
}

<style>
    .dropdown-menu {
        font-size: small;
    }
</style>
    <div class="main_row">
        <div class="row mb-20">
            <div class="colmn col-md-12 text-center">
                <div class="form-group">
                    <label class="form-label">Last Positions Held</label>
                </div>
            </div>
        </div>
        @Html.HiddenFor(x => x.ApplicantPositionTitle[0].APT_ApplicantId)
        @*@for (var i = 0; i < Model.ApplicantPositionTitle.Count(); i++)
        {*@
        @foreach (var item in Model.ApplicantPositionTitle)
        {
            <div class="row">
                <div class="colmn col-md-3">
                    <div class="form-group">
                        @Html.TextBoxFor(model => item.APT_PositionTitle, new { @class = "form-control", @placeholder = "Position Title" })
                        @Html.ValidationMessageFor(model => item.APT_PositionTitle)
                    </div>
                </div>
                <div class="colmn col-md-3">
                    <div class="form-group">
                        @Html.TextBoxFor(model => item.APT_Salary, new { @class = "form-control", @placeholder = "Salary" })
                        @Html.ValidationMessageFor(model => item.APT_Salary)
                    </div>
                </div>
                <div class="colmn col-md-1">
                    <div class="form-group">
                        <label class="form-label mt-10">From MO/YR</label>
                    </div>
                </div>
                <div class="colmn col-md-2">
                    <div class="form-group">
                        @Html.TextBoxFor(model => item.APT_FromMoYr, new { @class = "form-control datepicker", @placeholder = "DD MM YYYY" })
                        @Html.ValidationMessageFor(model => item.APT_FromMoYr)
                    </div>
                </div>
                <div class="colmn col-md-1">
                    <div class="form-group">
                        <label class="form-label mt-10">To MO/YR</label>
                    </div>
                </div>
                <div class="colmn col-md-2">
                    <div class="form-group">
                        @Html.TextBoxFor(model => item.APT_ToMoYr, new { @class = "form-control datepicker", @placeholder = "DD MM YYYY" })
                        @Html.ValidationMessageFor(model => item.APT_ToMoYr)
                    </div>
                </div>
            </div>
        }
    </div>
