@model WorkOrderEMS.Models.CommonApplicantModel

@{
    Layout = null;
}
<div class="main_row">
    @for (var i = 0; i < Model.ApplicantVehiclesOperated.Count(); i++)
    {

        <div class="row">
            <div class="colmn col-md-12 text-left">
                <div class="form-group">
                    <label class="form-label">Please list the vehicle oprated</label>
                </div>
            </div>
        </div><div class="row">
            <div class="colmn col-md-9">
                <div class="form-group pt-4 checkbox_group">
                    <label class="form-label">Have you ever been denied a licence,Permit, or privilege to operate a moter Vehicle</label>
                </div>
            </div>
            <div class="colmn col-md-3">
                <div class="form-group pt-4 checkbox_group">
                    @Html.RadioButtonFor(model => model.ApplicantVehiclesOperated[i].AVO_DenideLicensePermit, true, new { @class = "form-label checkbox_label" }) Yes
                    @Html.RadioButtonFor(model => model.ApplicantVehiclesOperated[i].AVO_DenideLicensePermit, false, new { @class = "form-label checkbox_label" }) No

                </div>
            </div>
        </div>
        <div class="row">
            <div class="colmn col-md-12">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.ApplicantVehiclesOperated[i].AVO_DeniedLicensePermitExplanation, new { @class = "form-control", @placeholder = "If yes, Explain" })
                    @Html.ValidationMessageFor(model => model.ApplicantVehiclesOperated[i].AVO_DeniedLicensePermitExplanation)

                </div>
            </div>
        </div>

        <div class="row">
            <div class="colmn col-md-9">
                <div class="form-group pt-4 checkbox_group">
                    <label class="form-label">Has any licence, permitor previlrge ever been suspended or rewoked?</label>
                </div>
            </div>
            <div class="colmn col-md-3">
                <div class="form-group pt-4 checkbox_group">
                    @Html.RadioButtonFor(model => model.ApplicantVehiclesOperated[i].AVO_SuspendRevokeLicensePermit, true, new { @class = "form-label checkbox_label" }) Yes
                    @Html.RadioButtonFor(model => model.ApplicantVehiclesOperated[i].AVO_SuspendRevokeLicensePermit, false, new { @class = "form-label checkbox_label" }) No

                </div>
            </div>
        </div>

        <div class="row">
            <div class="colmn col-md-12">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.ApplicantVehiclesOperated[i].AVO_SuspendRevokeLicensePermitExplanation, new { @class = "form-control", @placeholder = "If yes, Explain" })
                    @Html.ValidationMessageFor(model => model.ApplicantVehiclesOperated[i].AVO_SuspendRevokeLicensePermitExplanation)
                </div>
            </div>
        </div>
    }
    <div class="btn_row">
        <div class="row">
            <div class="colmn col-md-12 d-flex space-between">
                <button class="btn">Previous</button>
                <button class="btn">Next</button>
            </div>
        </div>
    </div>
</div>