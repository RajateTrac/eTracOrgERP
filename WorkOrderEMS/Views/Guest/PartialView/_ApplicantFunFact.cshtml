@model WorkOrderEMS.Models.ApplicantFunFactModel
    @{ 
        long ApplicantId = Convert.ToInt64(Session["ApplicantId"]);
    }
<style>
    .colorCode {
        color: cornflowerblue;
        font-size: 17px;
    }
    .modal-open {
        overflow: auto;
    }
</style>
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<div id="ApplicantFunFactDiv" style="margin-top:80px;">
    <br /><br />
    <span style="font-size: 33px; color: darkblue;margin-left:600px;">Employee Fun Facts</span>
    <br /><br /><br />
    <div style="padding-left:200px;">
        <form id="ApplicantFunFactForm">
            <input type="hidden" value="@Model.FormStatusw4" name="FormStatusw4" id="FormStatusw4">
            <input type="hidden" value="@Model.FormStatusI9" name="FormStatusI9" id="FormStatusI9">
            <input type="hidden" value="@Model.FormStatusdd" name="FormStatusdd" id="FormStatusdd">
            <input type="hidden" value="@Model.FormStatusEvf" name="FormStatusEvf" id="FormStatusEvf">
            <input type="hidden" value="@Model.FormStatussif" name="FormStatussif" id="FormStatussif">
            <input type="hidden" value="@Model.FormStatusbcf" name="FormStatusbcf" id="FormStatusbcf">
            <input type="hidden" value="@Model.FormStatusrop" name="FormStatusrop" id="FormStatusrop">
            <input type="hidden" value="@Model.FormStatusprfecf" name="FormStatusprfecf" id="FormStatusprfecf">
            <input type="hidden" value="@Model.FormStatusprfcaf" name="FormStatusprfcaf" id="FormStatusprfcaf">
            <input type="hidden" value="@Model.FormStatusprf" name="FormStatusprf" id="FormStatusprf">
            <input type="hidden" value="@Model.FormStatusff" name="FormStatusff" id="FormStatusff">
            
            <div class="row">
                <div class="colmn col-md-12">
                    <label class="colorCode"> 1.	If you were a car, what make and model would you be? And why?</label>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-9">
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Answer_Que1, new { @class = "form-control", @placeholder = "Comment", @rows = "5" })
                        @Html.ValidationMessageFor(x => x.Answer_Que1)
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="colmn col-md-12">
                    <label class="colorCode"> 2.	If you could visit anywhere in the world you’ve never been, where would you go?</label>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-9">
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Answer_Que2, new { @class = "form-control", @placeholder = "Comment", @rows = "5" })
                        @Html.ValidationMessageFor(x => x.Answer_Que2)
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="colmn col-md-12">
                    <label class="colorCode">  3.	What was your favorite subject in school?</label>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-9">
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Answer_Que3, new { @class = "form-control", @placeholder = "Comment", @rows = "5" })
                        @Html.ValidationMessageFor(x => x.Answer_Que3)
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="colmn col-md-12">
                    <label class="colorCode">  4.	What famous person had the most influence on you growing up?</label>
                </div>
            </div>
            <div class="row">
                <div class="colmn col-md-9">
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Answer_Que4, new { @class = "form-control", @placeholder = "Comment", @rows = "5" })
                        @Html.ValidationMessageFor(x => x.Answer_Que4)
                    </div>
                </div>
            </div>
            <br />
            @*<div class="row" style="margin-left: 62%;">
            <span class="btn btn-success" style="cursor:pointer;" onclick="SubmitForm(this, ApplicantFunFactForm)" title="Save & Go for Sign Document">
                Save & Go for Signature
            </span>
        </div>*@
            <br /> <br />
        </form>

    </div>
</div>


<div class="row" style="height: 50px;background-color: #292b48;bottom: 0;overflow: hidden;position: fixed;width: 100%;margin-left: 0px;">
    <div class="col-md-4 text-right">

    </div>
    <div class="col-md-4 text-center">
        <span>
            <i class="fa fa-check-square" aria-hidden="true" title="Go To CheckList" onclick="GuestCheckList(this,ApplicantFunFactForm)" style="font-size: 20px;margin-top: 15px;color: #6cc387f2;padding-right:30px;cursor:pointer;"></i>
        </span>

        <span>
            <a><i class="fa fa-question-circle" aria-hidden="true" title="Help" style="font-size: 20px;color: #f73c3c;margin-top: 6px;padding-right:30px;cursor:pointer;" onclick="SendFormIssueNotification('Fun Facts', '@ApplicantId');" ></i></a>
        </span>

        <span>
            <a><i class="fa fa-floppy-o" aria-hidden="true" title="Save" onclick="SaveBeforeNext(this,ApplicantFunFactForm)" style="font-size: 20px;color: #6cc387f2;margin-top: 6px;padding-right:30px;cursor:pointer;"></i></a>
        </span>

    </div>
    <div class="col-md-4 text-right">
        <span style="cursor:pointer;" onclick="SubmitForm(this,ApplicantFunFactForm)" title="Next">
            <a><i class="fa fa-long-arrow-right" title="Next" style="font-size: 45px;color: #6cc387f2;margin-top: 2px;"></i></a>
        </span>
    </div>
</div>
<script src="~/Scripts/toastr.min.js"></script>