                <div class="welcome-text">
                    <br /> <br />
                </div>
            </div>

        </div>
        <div class="row justify-content-center">
            @if (@ViewBag.Count == "0")
            {
            <div class="col-lg-6">
                <a href="@Url.Action("WebEmployeeAttendanceClockIn", "EPeople")">
                    <div class="pricing_table_content mt-5" style="background-color: #529F9D;color:white;">
                        <p style="margin-top:-20px;font-size:20px;"><b> </b></p>
                        <div class="package" style="margin-top:-30px;"><i class="fa fa-clock-o" style="color:yellow;font-size:30px;margin-left: -10px;"></i>&nbsp;&nbsp;&nbsp;<b>Clock In</b></div>
                    </div>
                </a>
            </div>
            }
            else
            {
            <div class="col-lg-6">
                <a href="@Url.Action("WebEmployeeAttendanceClockOut", "EPeople")" data-oldDash="Yes">
                    <div class="pricing_table_content mt-5" style="background-color: #3F8ADA;color:white;">
                        <p style="margin-top:-20px;font-size:20px;"><b> </b></p>
                        <div class="package" style="margin-top:-30px;"><i class="mdi mdi-account-check" style="color:white;font-size:30px;"></i>&nbsp;&nbsp;&nbsp;<b>clock Out</b></div>
                    </div>
                </a>
            </div>
            }
        </div>
    </div>
</div>

