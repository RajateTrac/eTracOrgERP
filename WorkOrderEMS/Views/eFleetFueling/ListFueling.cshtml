@section scripts{
    <script src="~/GridListing/JqGridScript/ListFueling.js"></script>
    <script type="text/javascript">
        $(window).bind('resize', function () {
            var width = $('#jqGrid_container').width();
            $('#tbl_FuelingList').setGridWidth(width);
        });
    </script>
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

    <div id="jqGrid_container">
        <table id="tbl_FuelingList" border="0" cellpadding="0" cellspacing="0"></table>
        <div id="divFuelingListPager"></div>
    </div>
</div>

<div class="modal fade preview" id="FuelingModalDetailPreview" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">X</span></button>
                <h4 class="modal-title" id="fuelingmyModalLabel">Fueling Details</h4>
            </div>
            <div class="modal-body">
                <div id="fuelingdivDetailPreview" class="">
                    <div class="row">
                        <div class="" id="DivFuelDetailsIndex">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label id="labelVehicleNumber">Vehicle Number</label>
                                    <div id="lblVehicleNumber" class="form-control-static"></div>
                                </div>
                                <div class="form-group">
                                    <label id="labelQRCodeID">QR Code ID</label>
                                    <div id="lblQRCodeID" class="form-control-static"></div>

                                </div>
                                <div class="form-group">
                                    <label id="labelMileage">Mileage</label>
                                    <div id="lblMileage" class="form-control-static"></div>
                                </div>
                                
                                <div class="form-group">
                                    <label id="labelFuelTypeName">Fuel Type Name</label>
                                    <div id="lblFuelTypeName" class="form-control-static"></div>
                                </div>
                               
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label id="labelFuelingDate">Fueling Date</label>
                                    <div id="lblFuelingDate" class="form-control-static"></div>
                                </div>
                                <div class="form-group">
                                    <label id="labelGallons">Gallons</label>
                                    <div id="lblGallons" class="form-control-static"></div>
                                </div>
                                <label>Price Per Gallon</label>
                                <div class="form-group">
                                    <div id="lblPricePerGallon" class="form-control-static"></div>
                                </div>
                                <div class="form-group">                                   
                                    <label id="labelTotal">Total</label>
                                    <div id="lblTotal" class="form-control-static"></div>
                                </div>
                                <div class="form-group">
                                    <label id="labelGasStatioName">Gas Station Name</label>
                                    <div id="lblGasStationName" class="form-control-static"></div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label id="labelDriverName">Driver Name</label>
                                    <div id="lblDriverName" class="form-control-static"></div>
                                </div>

                            </div>                          
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="text-right">
                    
                    <button data-dismiss="modal" class="btn btn-default bluebutton" id="btnCancelqwe">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
