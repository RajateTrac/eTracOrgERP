@model IEnumerable<WorkOrderEMS.Models.NewAdminModel.GWCQUestionModel>

@{
    //Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    Layout = null;
    int count = 0;
}
<style>
    .tableColorChange {
        background-color: #4e65e5;
    }
    .HeadingColorTable{
        color:white;
    }
</style>
@*<div class="col-sm-12 col-xs-12 col-md-12 glowbuttonActiveDeactive" style=""> Self Assessment</div>*@
<div class="table-responsive">
    @*<button id="back" class="btn btn-info pull-right">Back</button>*@
    <span id="back"><i class="fa fa-arrow-left fa-2x" style="color:blue;" aria-hidden="true"></i></span>
    <table class="table">
        <tbody>
            @foreach (var item in Model)
            {
                if (item.QuestionType == "G30" && count == 0)
                {

                    <tr class="tableColorChange" style="background-color: #4e65e5;">
                        <td class="HeadingColorTable">Get It</td>


                        <td class="HeadingColorTable">
                            self eval
                        </td>
                    </tr>

                    count = count + 1;
                }
                else if (item.QuestionType == "W30" && count == 1)
                {
                    <tr class=" tableColorChange" style="background-color: #4e65e5;">
                        <td class="HeadingColorTable">Want It</td>

                        @*table-primary*@
                        <td class="HeadingColorTable">
                            self eval
                        </td>
                    </tr>
                    count = count + 1;

                }
                else if (item.QuestionType == "C30" && count == 2)
                {
                    <tr class="tableColorChange" style="background-color: #4e65e5;">
                        <td class="HeadingColorTable">Capacity to do It</td>
                        <td class="HeadingColorTable">
                            self eval
                        </td>
                    </tr>
                    count = count + 1;

                }

                <tr class="table-light">
                    <td class="que">
                        @Html.DisplayFor(modelItem => item.Question)

                    </td>

                    <td class="ans" data-value="@item.QuestionId" data-user="@item.EmployeeId">

                        <input type="radio" value="true" name="Opt_@item.QuestionId" /> Yes |
                        <input type="radio" value="true" name="Opt_@item.QuestionId" /> Some What |
                        <input type="radio" value="false" name="Opt_@item.QuestionId" /> No
                    </td>
                </tr>
            }

            <tr align="center">
                <td>

                    <button id="draft" class="btn btn-secondary">Draft</button>

                    <button id="submit" class="btn btn-success" onclick="saveAssessment306090(this)">Submit</button>
                </td>
            </tr>
    </tbody>
</table>
</div>
<script>
    $("#back").on('click', function () {
        $("#gridArea").show();
        $('#profileArea').hide();
        $("#List306090").jsGrid("loadData");

    });
    function saveAssessment306090() {
        var obj = [];
        var tab = $("td.ans");
        $.each(tab, function (i, elem) {
            QuestionId = elem.getAttribute("data-value");
            EmployeeId = elem.getAttribute("data-user");

            Answer = $("input[type='radio'][name='Opt_" + QuestionId + "']:checked").val();
            obj.push({ "QuestionId":QuestionId, "Answer":Answer ,"EmployeeId":EmployeeId});
            
        });
        obj = JSON.stringify({ 'data': obj });
        debugger;
        $.ajax({
            type: "POST",
            data: obj,
            url: '../NewAdmin/saveSelfAssessment/',
            contentType: "application/json; charset=utf-8",
        dataType: 'json',
            error: function (xhr, status, error) {
            },
            success: function (result) {
                debugger
                if (result != null) {

                }
            }
        });

    }
</script>
