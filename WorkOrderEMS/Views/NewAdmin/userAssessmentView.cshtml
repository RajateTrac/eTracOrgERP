@model IEnumerable<WorkOrderEMS.Models.NewAdminModel.GWCQUestionModel>

@{
    //Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    Layout = null;
    int count = 0;
    var isSubmitted = Model.FirstOrDefault().SAM_IsActive!=null?Model.FirstOrDefault().SAM_IsActive:"Y";
    @Html.Hidden(isSubmitted, new { id = "isSubmitted" })
}


<button id="back" class="btn btn-info pull-right" style="
    margin-right: 20px;
    margin-top: 2px;
    margin-bottom: 2px;
    width: 64px;
    float: right!important;
    align-self: flex-end;
">
    Back
</button>
<table class="table" id="selfAssessmentTable">
    <tbody>
        <div class="col-sm-12 col-xs-12 col-md-12 glowbuttonActiveDeactive"> Self Assessment</div>
        <div class="table-responsive">
            @foreach (var item in Model)
            {
                if (item.QuestionType == "G30" && count == 0)
                {

                    <tr class="table-primary">
                        <td>Get It</td>


                        <td>
                            self eval
                        </td>
                    </tr>

                    count = count + 1;
                }
                else if (item.QuestionType == "W30" && count == 1)
                {
                    <tr class="table-primary">
                        <td>Want It</td>


                        <td>
                            self eval
                        </td>
                    </tr>
                    count = count + 1;

                }
                else if (item.QuestionType == "C30" && count == 2)
                {
                    <tr class="table-primary">
                        <td>Capacity to do It</td>


                        <td>
                            self eval
                        </td>
                    </tr>
                    count = count + 1;

                }

                <tr class="table-light">
                    <td class="que">
                        @Html.DisplayFor(modelItem => item.Question)

                    </td>
                    @if (item.SAM_IsActive == "S")
                    {
                        <td class="ans" data-value="@item.QuestionId" data-user="@item.EmployeeId" data-sam="@item.SelfAssessmentId" data-isAct="@item.SAM_IsActive">


                            @if (item.Answer == "Y" && @item.SelfAssessmentId > 0)
                            {

                                <input type="radio" value="true" name="Opt_@item.QuestionId" checked disabled />
                            }
                            else
                            {
                                <input type="radio" value="true" name="Opt_@item.QuestionId" disabled/>
                            }Yes

                            @if (item.Answer == "N" && @item.SelfAssessmentId > 0)
                            {
                                <input type="radio" value="false" name="Opt_@item.QuestionId" checked disabled/>
                            }
                            else
                            {
                                <input type="radio" value="false" name="Opt_@item.QuestionId" disabled/>
                            }No
                        </td>
 }
                    else
                    {
                        <td class="ans" data-value="@item.QuestionId" data-user="@item.EmployeeId" data-sam="@item.SelfAssessmentId" data-isAct="@item.SAM_IsActive">


                            @if (item.Answer == "Y" && @item.SelfAssessmentId > 0)
                            {

                                <input type="radio" value="true" name="Opt_@item.QuestionId" checked />
                            }
                            else
                            {
                                <input type="radio" value="true" name="Opt_@item.QuestionId" />
                            }Yes

                            @if (item.Answer == "N" && @item.SelfAssessmentId > 0)
                            {
                                <input type="radio" value="false" name="Opt_@item.QuestionId" checked />
                            }
                            else
                            {
                                <input type="radio" value="false" name="Opt_@item.QuestionId" />
                            }No
                        </td>
                    }
                </tr>
            }

            <tr align="center">
                <td>
                    @if (isSubmitted == "S")
                    {
                        <button id="draft" class="btn btn-secondary" disabled onclick="saveAssessment306090('Draft')">Draft</button>

                        <button id="submit" class="btn btn-success" disabled onclick="saveAssessment306090('Submit')">Submit</button>
                    }
                    else
                    {
                        <button id="draft" class="btn btn-secondary" onclick="saveAssessment306090('Draft')">Draft</button>

                        <button id="submit" class="btn btn-success" onclick="saveAssessment306090('Submit')">Submit</button>
                    }
                </td>
            </tr>
    </tbody>
</table>
</div>
<script>
    $("document").ready(function () {

        enableDisableBtn();
        $("td.ans input[type='radio']").on("click", function () {
            $('#submit').attr("disabled", false);
        })

    });
    function enableDisableBtn() {
        if ($("td.ans input[type='radio']checked").length > 1) {

            $('#submit').attr("disabled", false);
        }
        else {
            $('#submit').attr("disabled", true);
        }
    }



    $("#back").on('click', function () {
        $("#gridArea").show();
        $('#profileArea').hide();
        $("#List306090").jsGrid("loadData");

    });
    function saveAssessment306090(action) {
        var obj = [];
        var tab = $("td.ans");
        $.each(tab, function (i, elem) {
            QuestionId = elem.getAttribute("data-value");
            EmployeeId = elem.getAttribute("data-user");
            SAM_IsActive = elem.getAttribute("data-isAct");
            Answer = $("input[type='radio'][name='Opt_" + QuestionId + "']:checked").val();
            SelfAssessmentId = elem.getAttribute("data-sam");
            obj.push({ "QuestionId": QuestionId, "Answer": Answer, "EmployeeId": EmployeeId, "SelfAssessmentId": SelfAssessmentId, "SAM_IsActive": SAM_IsActive });

        });
        obj = JSON.stringify({ 'data': obj });
        var url = (action == "Draft") ? '../NewAdmin/draftSelfAssessment/' : '../NewAdmin/saveSelfAssessment/'
        $.ajax({
            type: "POST",
            data: obj,
            url: url,
            contentType: "application/json; charset=utf-8",
            dataType: 'json',
            error: function (xhr, status, error) {
            },
            success: function (result) {
                if (result != null) {

                }
            }
        });

    }
</script>
