
    <div class="basic-form">
        <div class="form-group row">
            <label class="col-sm-2">Comment by Employee :</label>
            <div class="col-sm-10">
                <div id="AddComment"></div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2">Requisting Rational :</label>
            <div class="col-sm-10">
                <select id="SelectRational">
                    <option value="Legality">Legality</option>
                    <option value="Policy">Policy</option>
                    <option value="Legality & Policy">Legality & Policy</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2">Attachment</label>
            <div class="col-sm-10">
                <iframe src="@Url.Action("GetPDFDisplay")?fileName='@ViewBag.FileName'#toolbar=0" id="openFileToView_@ViewBag.FileId" class="viewAndPrintFile" style="width:100%; height:550px;" frameborder="0"></iframe>
            </div>
        </div>
    </div>